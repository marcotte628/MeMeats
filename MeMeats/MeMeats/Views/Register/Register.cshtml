
@{
    ViewBag.Title = "Register";
}

<div class="container" ng-controller="registerController">

    <h2>Register</h2>
    <form>

        <div class="form-group">
            <label for="username">Username:</label>
            <input ng-model="username" type="text" class="form-control" id="username">
        </div>
        <div class="form-group">
            <label for="password">Password:</label>
            <input ng-model="password" type="password" class="form-control" id="password">
        </div>
        <div class="form-group">
            <label for="password">Confirm Password:</label>
            <input ng-model="confirm" type="password" class="form-control" id="confirm">
        </div>
    </form>
    <button class="btn btn-default" ng-click="register">Register</button>
    <button class="btn btn-default" href="/Login">Cancel</button>

</div>

