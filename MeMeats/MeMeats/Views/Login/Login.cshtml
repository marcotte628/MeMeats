
@{
    ViewBag.Title = "Login";
}


<div class="container">

    <h2>Login</h2>

    <div ng-app="sqlQueryModule" ng-controller="loginController">
        <form novalidate>
            Username:<br>
            <input type="text" ng-model="username" class="form-control"><br>
            Password:<br>
            <input type="password" ng-model="password" class="form-control">
            <br><br>
            <button ng-click="login()" class="btn btn-default">Login</button>
            <button ng-click="register()" class="btn btn-default">Register</button>
        </form>
    </div>
</div>