
@{
    ViewBag.Title = "Login";
}


<div class="container" ng-controller="loginController">

    <h2>Login</h2>
    <form>
        <div class="form-group">
            <label for="username">Username:</label>
            <input ng-model="username" type="text" class="form-control" id="username">
        </div>
        <div class="form-group">
            <label for="password">Password:</label>
            <input ng-model="password" type="password" class="form-control" id="password">
        </div>
    </form>
        <button class="btn btn-default" ng-click="login">Login</button>
        <button class="btn btn-default" href="/Register">Register</button>

</div>